@model Wimi.BtlCore.Web.Models.Account.LanguagesViewModel

@if (Model.AllLanguages.Count > 1)
{
    <div class="language-switch-area">

        @foreach (var languageInfo in Model.AllLanguages)
        {
            @*<a href="~/AbpLocalization/ChangeCulture?cultureName=@(languageInfo.Name)&returnUrl=@Request.Url">*@
            <a href="~/AbpLocalization/ChangeCulture?cultureName=@(languageInfo.Name)&returnUrl=@Context.Request.Path">

                <span class="language-icon @(languageInfo == Model.CurrentLanguage ? "language-icon-current" : string.Empty)" title="@languageInfo.DisplayName"><i class="@languageInfo.Icon"></i></span>
            </a>
        }
    </div>
}