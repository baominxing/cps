@using Wimi.BtlCore.Web.Models.Common.Modals
@await Html.PartialAsync("~/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("SystemLog")))

<div class="modal-body">

    <div class="form-group">

        <div class="btn btn-default btn-file" id="Picture">
            <i class="fa fa-cloud-upload" aria-hidden="true"> @L("SelectFiles")</i>
            <input id="imageUpload" type="file" name="LogoPicture" />
        </div>

    </div>

    <div class="row">
        <div class="col-md-4">@L("CuttingRatio")</div>
        <div class="col-md-4">
            <input type="number"
                   id="AspectRatio"
                   name="AspectRatio"
                   class="form-control"
                   min="0"
                   value="1"
                   max="5"
                   step="0.1">
        </div>
    </div>
    <div class="row margin-top-20">
        <div class="col-md-6">
            <div>
                <img id="cropImage" />
                <button type="button" class="btn btn-primary"
                        id="btnCrop">
                    @L("Tailoring")
                </button>
            </div>
        </div>
        <div class="col-md-6">
            <label>@L("PreviewTailoring")</label>
            <img id="preImg" style="width: 100%; height: 100%;" />
        </div>
    </div>
</div>

@await Html.PartialAsync("~/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")


