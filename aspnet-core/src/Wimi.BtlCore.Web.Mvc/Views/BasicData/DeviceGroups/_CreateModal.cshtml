@using Wimi.BtlCore.BasicData.DeviceGroups
@using Wimi.BtlCore.Web.Models.Common.Modals
@model Wimi.BtlCore.Web.Models.BasicData.DeviceGroups.CreateDeviceGroupModalViewModel

@await Html.PartialAsync("~/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("NewEquipmentGroup")))

<div class="modal-body">

    <form name="DeviceGroupForm" role="form" novalidate class="form-validation">

        <input type="hidden" name="ParentId" value="@Model.ParentId" />

        <div class="form-group">

            <label>@L("Name")</label>

            <input class="form-control" type="text" name="DisplayName" checkSpace="true" required maxlength="@DeviceGroup.MaxDisplayNameLength">

        </div>

        <div class="form-group">

            <label>@L("SortSeq")</label>

            <input class="form-control" type="number" name="Seq" required digits="true">

        </div>

    </form>

</div>

@await Html.PartialAsync("~/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
