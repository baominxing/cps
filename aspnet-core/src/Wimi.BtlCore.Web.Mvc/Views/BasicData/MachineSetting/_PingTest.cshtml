@using Wimi.BtlCore
@using Wimi.BtlCore.Web.Models.Common.Modals

@await Html.PartialAsync("~/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("Ping测试"))

<div class="modal-body">
    <form name="MachineTypeForm" role="form" novalidate class="form-validation">
        <div class="form-group form-md-line-input form-md-floating-label">
            <label>@L("IpAddress")</label>

            <input class="form-control" type="text" id="IpAddress1" name="IpAddress" maxlength="@BtlCoreConsts.IPAdressLength">
        </div>

    </form>
</div>
<div class="modal-footer">

    <button type="button" class="btn btn-primary close-button" data-dismiss="modal">@L("Cancel")</button>

    <button type="button" class="btn btn-primary blue save-button">
        <i class="fa fa-save"></i> <span>@L("Test")</span>
    </button>

</div>
