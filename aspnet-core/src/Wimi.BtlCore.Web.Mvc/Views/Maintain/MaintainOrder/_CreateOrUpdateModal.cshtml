@using Wimi.BtlCore.Web.Models.Common.Modals
@model Wimi.BtlCore.Web.Models.Maintain.MaintainOrder.MaintainOrderViewModel
@await Html.PartialAsync("~/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(@Model.IsEditMode ? L("Editor") : L("NewlyBuild")))
<div class="modal-body">
    <form name="createOrUpdateForm" role="form" novalidate class="form-validation">
        <div class="row">
            <div class="form-group form-md-line-input form-md-floating-label col-md-6">
                <label>@L("PlanCode")</label>
                <input type="text" class="form-control" disabled="disabled" value="@(Model.MaintainOrderDto.MaintainPlanCode)" />
            </div>

            <div class="form-group form-md-line-input form-md-floating-label col-md-6">
                <label>@L("PlanName")</label>
                <input type="text" class="form-control" disabled="disabled" value="@(Model.MaintainOrderDto.MaintainPlanName)" />
            </div>

            <div class="form-group form-md-line-input form-md-floating-label col-md-6">
                <label>@L("MachineCode")</label>
                <input type="text" class="form-control" disabled="disabled" value="@(Model.MaintainOrderDto.MachineCode)" />
            </div>

            <div class="form-group form-md-line-input form-md-floating-label col-md-6">
                <label>@L("ResponsiblePerson")</label>
                <input type="text" class="form-control" disabled="disabled" value="@(Model.MaintainOrderDto.PersonInChargeName)" />
            </div>

            <div class="form-group form-md-line-input form-md-floating-label col-md-6">
                <label>@L("StartDate")</label>
                <input type="text" class="form-control" disabled="disabled" value="@(Model.MaintainOrderDto.StartDate)" />
            </div>

            <div class="form-group form-md-line-input form-md-floating-label col-md-6">
                <label>@L("EndDate")</label>
                <input type="text" class="form-control" disabled="disabled" value="@(Model.MaintainOrderDto.EndDate)" />
            </div>

            <div class="form-group form-md-line-input form-md-floating-label col-md-6">
                <label>@L("TimeInterval")</label>
                <input type="text" class="form-control" disabled="disabled" value="@(Model.MaintainOrderDto.IntervalDate)" />
            </div>

            <div class="form-group form-md-line-input form-md-floating-label col-md-12">
                <label>@L("Remarks")</label>
                <textarea class="form-control" disabled="disabled" name="Memo" style="height:100px">@(Model.IsEditMode ? Model.MaintainOrderDto.MaintainPlanMemo : string.Empty)</textarea>
            </div>

            <hr />

            <div class="form-group form-md-line-input form-md-floating-label col-md-6">
                <label>@L("WorkOrderNumber")</label>
                <input type="text" class="form-control" disabled="disabled" value="@(Model.MaintainOrderDto.Code)" />
            </div>
            <div class="form-group form-md-line-input form-md-floating-label col-md-6">
                <label>@L("MaintenancePersonnel")</label>
                <select id="userContainer" name="MaintainUserId" class="form-control" required></select>
            </div>

            <div class="form-group form-md-line-input form-md-floating-label col-md-6">
                <label>@L("StartTime")</label>
                <input type="text" id="StartTime" class="form-control" name="StartTime" required
                       value="@(Model.IsEditMode ? Model.MaintainOrderDto.StartTime: DateTime.Now)" />
            </div>

            <div class="form-group form-md-line-input form-md-floating-label col-md-6">
                <label>@L("EndTime")</label>
                <input type="text" id="EndTime" class="form-control" name="EndTime" required
                       value="@(Model.IsEditMode ? Model.MaintainOrderDto.EndTime : DateTime.Now)" />
            </div>

            <div class="form-group form-md-line-input form-md-floating-label col-md-6">
                <label>@L("PlanDate")</label>
                <input type="text" class="form-control" name="ScheduledDate" disabled="disabled" value="@(Model.MaintainOrderDto.ScheduledDate.ToString("yyyy-MM-dd"))" />
            </div>

            <div class="form-group form-md-line-input form-md-floating-label col-md-6">
                <label>@L("MaintenanceTimeConsuming")</label>
                <input type="text" class="form-control" disabled="disabled" id="MaintenanceTimeConsuming" value="@(Model.MaintainOrderDto.Cost)" />
            </div>

            <div class="form-group form-md-line-input form-md-floating-label col-md-12">
                <label>@L("Remarks")</label>
                <textarea class="form-control" id="Memo" name="Memo" style="height:100px">@(Model.IsEditMode ? Model.MaintainOrderDto.Memo : string.Empty)</textarea>
            </div>

            <input type="hidden" id="Id" name="Id" value="@(Model.IsEditMode ? Model.MaintainOrderDto.Id : 0)" />
            <input type="hidden" id="MaintainPlanCode" name="MaintainPlanCode" value="@(Model.IsEditMode ? Model.MaintainOrderDto.MaintainPlanCode : string.Empty)" />
            <input type="hidden" id="Status" name="Status" value="@(Model.IsEditMode ? Model.MaintainOrderDto.Status : "Undo")" />
            <input type="hidden" id="MaintainUserId" value="@(Model.IsEditMode ? Model.MaintainOrderDto.MaintainUserId : 1)" />
        </div>
    </form>
</div>
@await Html.PartialAsync("~/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")

