@using Wimi.BtlCore.Web.Startup
@{
    ViewBag.CurrentPageName = PageNames.App.Page.Maintain_Repair;
}
@section Scripts
{
    <script src="~/view-resources/Views/Maintain/MaintainRepair/Index.js" asp-append-version="true"></script>
}
<section class="content-header">

    <h1>
        @L("MaintainRepair")
    </h1>

</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-solid">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <i class="fa fa-search"></i> @L("QueryArea")
                    </h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    <form id="RequestForm" class="form-horizontal no-padding">
                        <div class="row">
                            <div class="col-xs-12 col-sm-4 ">
                                <label class="col-sm-4 control-label">
                                    <b class="text-primary">@L("RequestNo")</b>
                                </label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="Code" name="Code">
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-4 ">
                                <label class="col-sm-4 control-label">
                                    <b class="text-primary">@L("SelectDevice")</b>
                                </label>
                                <div class="col-sm-8">
                                    <select type="text" class="form-control" id="MachineId" name="MachineId"></select>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-4 ">
                                <label class="col-sm-4 control-label">
                                    <b class="text-primary">@L("State")</b>
                                </label>
                                <div class="col-sm-8">
                                    <select type="text" class="form-control" id="Status" name="Status">
                                        <option selected value="3">@L("All")</option>
                                        <option value="0">@L("PendingMaintance")</option>
                                        <option value="1">@L("InMaintenance")</option>
                                        <option value="2">@L("Repaired")</option>
                                    </select>
                                </div>
                            </div>

                        </div>
                        <div class="row" style="margin-top: 5px;">

                            <div class="col-xs-12 col-sm-4 ">
                                <label class="col-sm-4 control-label">
                                    <b class="text-primary">@L("StartTime")</b>
                                </label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="StartTime" name="StartTime">
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-4 ">
                                <label class="col-sm-4 control-label">
                                    <b class="text-primary">@L("EndTime")</b>
                                </label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="EndTime" name="EndTime">
                                </div>
                            </div>

                            <div class="col-xs-8 col-sm-4">
                                <div class="col-xs-12">
                                    <button type="button" id="btnQuery" class="btn btn-primary btn-sm pull-right">@L("Research")</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="box box-solid">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <i class="fa fa-menu"></i> @L("MaintenanceList")
                    </h3>
                </div>
                <div class="box-body">
                    <table id="MaintainRequestTable" class="table table-bordered table-hover nowrap" style="width:100% !important"></table>
                </div>
            </div>
        </div>
    </div>
</section>
