@using Wimi.BtlCore.Authorization
@section Styles
{
    <style src="~/view-resources/Views/Notification/Notifications/Index.css" asp-append-version="true"></style>
}
@section Scripts
{
    <script src="~/view-resources/Views/Notification/Notifications/Index.js" asp-append-version="true"></script>
}
<section class="content-header">
    <h1>
        @L("Notifications")
    </h1>
    <div class="header-tools">
        <button class="btn btn-default" id="btnOpenNotificationSettingsModal">
            <i class="fa fa-cog"></i> @L("NotificationSettings")
        </button>
    </div>
</section>

<section class="content">

    <div class="box box-solid">
        <div class="box-header with-border">
            <h3 class="box-title">
                <i class="fa fa-search"></i> @L("QueryArea")
            </h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <form class="form-horizontal no-padding">
                <div class="col-xs-12  col-sm-4 ">
                    <label class="col-sm-4 control-label pull-left">
                        <b class="text-primary">@L("Select")</b>
                    </label>
                    <div class="col-sm-8">
                        <select id="TargetValueFilterSelectionCombobox"
                                class="form-control bs-select">
                            <option value="ALL">@L("All")</option>
                            <option value="UNREAD">@L("Unread")</option>
                        </select>
                    </div>

                </div>

                <div class="col-xs-12 col-sm-1 pull-right">
                    <button class="btn btn-primary blue" id="btnSetAllNotificationsAsRead">
                        <i class="fa fa-check"></i> @L("SetAllAsRead")
                    </button>
                </div>

                <div class="col-xs-12 col-sm-1 pull-right">
                    <button id="RefreshNotificationTableButton " class="btn btn-primary btn-sm pull-right form-control">
                        <i class="fa fa-refresh"></i> @L("Refresh")
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="box box-solid">
        <div class="box-header with-border">
            <h3 class="box-title">
                <i class="fa fa-th"></i> @L("QueryResults")
            </h3>
        </div>
        <div class="box-body">

            <table id="NotificationsTable" class="table table-bordered"></table>

        </div>

    </div>

</section>