@using Wimi.BtlCore.Web.Startup
@{
    ViewBag.CurrentPageName = PageNames.App.Page.Order_DefectiveStatistics;
}
@section Scripts
{
    <script src="~/view-resources/Views/Orders/DefectiveStatistics/Index.js" asp-append-version="true"></script>
    <script src="~/Scripts/echarts.min.js" asp-append-version="true"></script>
}

<section class="content-header">
    <h1>
        @L("DefectiveStatistics")
    </h1>
</section>

<section class="content">
    <div class="col-md-12">
        <div class="box box-solid">
            <div class="box-header with-border">
                <h3 class="box-title">
                    <i class="fa fa-search"></i> @L("QueryArea")
                </h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                <form class="form-horizontal no-padding">
                    <div class="col-xs-12 col-sm-4 ">
                        <label for="Product" class="col-sm-4 control-label">
                            <b class="text-primary">@L("ProductName")</b>
                        </label>
                        <div class="col-sm-8">
                            <select type="text" class="form-control" id="Product"></select>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-4 ">
                        <label class="col-sm-4 control-label">
                            <b class="text-primary">@L("TimeFrame")</b>
                        </label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="daterange-btn">
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-4">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="button" id="btnQuery" class="btn btn-primary btn-sm pull-right xs-mv-5"><i class="fa fa-search"></i> @L("Research")</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs pull-right">
                <li>
                    <a href="#tab_1-1" data-toggle="tab">@L("SortByDevice")</a>
                </li>
                <li>
                    <a href="#tab_3-3" data-toggle="tab">@L("SortByPeople")</a>
                </li>
                <li class="active">
                    <a href="#tab_2-2" data-toggle="tab">@L("DataSheet")</a>
                </li>
                <li class="pull-left header"><i class="fa fa-th"></i> @L("QueryResults")</li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane" id="tab_1-1">
                    <div id="chartlinebyMachine" style="height: 380px"></div>
                </div>
                <div class="tab-pane" id="tab_3-3">
                    <div id="chartlinebyUser" style="height: 380px"></div>
                </div>
                <div class="tab-pane active" id="tab_2-2">
                    <table class="table table-bordered table-striped table-hover nowrap" id="defectiveStatisticstable" style="width: 100%"></table>
                </div>
            </div>
        </div>
    </div>
</section>
