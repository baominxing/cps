@using Wimi.BtlCore.Web.Models.Common.Modals
@await Html.PartialAsync("~/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EquipmentReporting")))
<div class="modal-body">
    <form name="MachineReportForm" role="form" class="form-horizontal">
    </form>
</div>
@await Html.PartialAsync("~/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")

@*设备报工原因模板*@
<script id="machineReporttemplate" type="text/x-handlebars-template">
    <div class="row">
        <div class="col-xs-6">
            <label>@L("MachineName")</label>
            <input type="text" name="machineName" readonly class="form-control" value="{{machineName}}" />
        </div>
        <div class="col-xs-6">
            <label>@L("ProductionPlanCode")</label>
            <input type="number" name="productionPlanCode" readonly class="form-control" value="{{productionPlanCode}}" />
        </div>
        <div class="xs-pv-10 col-xs-6">
            <label>@L("CertifiedNumber")</label>
            <input type="number" name="qualifiedCount" class="form-control" required min="0" value={{qualifiedCount}} />
        </div>
        <div class="xs-pv-10 col-xs-6">
            <label>@L("DefectiveNumber")</label>
            <input type="number" name="defectiveCount" readonly class="form-control" required min="0" value={{defectiveCount}} />
        </div>

        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h4 class="box-title"><i class="fa fa-list-alt"></i> @L("DefectReasons")</h4>
                </div>
                <div class="box-body">
                    {{#each reasonsDictionary}}
                    <div class="xs-ph-5 col-xs-4">
                        <label>{{reasonName}}</label>
                        <input type="number" data-defectiveReasonsId={{defectiveReasonsId}} required class="form-control defective-Reasons" value={{#if count}} {{count}} {{else}} 0 {{/if}} min="0" />
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        <input type="hidden" name="Id" value="{{id}}" />
    </div>
</script>
