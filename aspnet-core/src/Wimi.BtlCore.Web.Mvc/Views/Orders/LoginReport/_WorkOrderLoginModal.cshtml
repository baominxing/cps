@using Wimi.BtlCore.Web.Models.Common.Modals
@await Html.PartialAsync("~/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("JobLogin")))
<div class="modal-body">
    <form name="LoginForm" role="form" class="form-horizontal">
        <div class="box box-primary">
            <div class="box-body">
                <div class="form-group col-sm-8 col-md-8 xs-mv-5">
                    <label for="machineSelect" class="col-sm-1 control-label">@L("Machines")</label>
                    <div class="col-sm-11">
                        <select class="form-control" name="machineSelect" id="machineSelect">
                        </select>
                    </div>
                </div>
                <div class="col-sm-4 col-md-4">
                    <button type="button" class="btn btn-primary btn-sm xs-mv-5" id="btnWorkOrderLogin">@L("JobLogin")</button>
                </div>

            </div>
        </div>
        <div class="input-group xs-mv-5 xs-pv-10 col-xs-12">
            <table class="table table-striped table-bordered table-hover" id="workOrderTaskTable" style="width: 100%"></table>
        </div>
    </form>
</div>
@await Html.PartialAsync("~/Views/Common/Modals/_ModalFooterWithCancel.cshtml")