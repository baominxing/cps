@using Wimi.BtlCore.Web.Startup
@{
    ViewBag.CurrentPageName = PageNames.App.Page.Order_MachineReport;
}

@section Scripts
{
    <script src="~/view-resources/Views/Orders/MachineReport/Index.js" asp-append-version="true"></script>
    <script src="~/Scripts/echarts.min.js" asp-append-version="true"></script>
}
<section class="content-header">
    <h1>
        @L("MachineReport") <small></small>
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-solid">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <i class="fa fa-search"></i> @L("QueryArea")
                    </h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    <form class="form-horizontal no-padding" onsubmit="return false">
                        <div class="col-xs-12 col-sm-4 ">
                            <label for="Product" class="col-sm-4 control-label">
                                <b class="text-primary">@L("Machines")</b>
                            </label>
                            <div class="col-sm-8">
                                <select class="form-control" name="machineId" id="machineId"></select>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-4 ">
                            <label class="col-sm-4 control-label">
                                <b class="text-primary">@L("Date")</b>
                            </label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="daterange-btn">
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-4">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="button" id="btnQuery" class="btn btn-primary btn-sm pull-right xs-mv-5"><i class="fa fa-search"></i> @L("Research")</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-12">
            <div class="row">
                <div class="col-md-7">
                    <div class="box box-solid">
                        <div class="box-header with-border">
                            <h3 class="box-title pull-left header">
                                <i class="fa fa-th"></i> @L("QueryResults")
                            </h3>
                        </div>
                        <div class="box-body">
                            <table id="hourlyYieldAnalysisTable" class="table table-bordered table-hover" style="width: 100%"></table>
                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="nav-tabs-custom">
                        <ul class="nav nav-tabs pull-right">
                            <li>
                                <a href="#tab_1-1" data-toggle="tab">@L("Histogram")</a>
                            </li>
                            <li class="active">
                                <a href="#tab_2-2" data-toggle="tab">@L("PieChart")</a>
                            </li>
                            <li class="pull-left header"><i class="fa fa-th"></i>@L("DistributionOfDefectiveProducts")</li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane" id="tab_1-1">
                                <div id="histogramchartline"></div>
                            </div>
                            <div class="tab-pane active" id="tab_2-2">
                                <div id="piechartline"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>