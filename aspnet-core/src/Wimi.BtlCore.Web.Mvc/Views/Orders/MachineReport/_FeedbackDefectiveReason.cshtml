@using Wimi.BtlCore.Web.Models.Common.Modals
@await Html.PartialAsync("~/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("AdverseCauseFeedback")))
<div class="modal-body">
    <form name="DefectiveReasonForm" role="form" class="form-horizontal"></form>
</div>
@await Html.PartialAsync("~/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script id="defectiveReasontemplate" type="text/x-handlebars-template">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h4 class="box-title"><i class="fa fa-list-alt"></i> @L("BadReason")</h4>
                </div>
                <div class="box-body">
                    {{#each this}}
                    <div class="col-xs-12">
                        <div class="box-header with-border">
                            <label class="box-title"> @L("DefectivePart")： {{defectivePartName}}</label>
                        </div>
                        <div class="box-body">
                            {{#each defectiveRecordList}}

                            <div class="xs-ph-5 col-xs-4">
                                <label>{{reasonName}}</label>
                                <input type="number" data-defectiveReasonsId={{defectiveReasonsId}} required min="0" name="defectiveReasonsId" max="10000000" digits="true" class="form-control defective-Reasons" value={{#if count}} {{count}} {{else}} 0 {{/if}} />
                            </div>

                            {{/each}}
                        </div>
                    </div>

                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</script>

