@using Wimi.BtlCore.Authorization
@using Wimi.BtlCore.Web.Startup
@{
    ViewBag.CurrentPageName = PageNames.App.Page.Order_Process;
}

@section Scripts
{
    <script src="~/view-resources/Views/Orders/Process/Index.js" asp-append-version="true"></script>
}

<section class="content-header">
    <h1>
        @L("Process")<small>@L("ProcessManage")</small>
    </h1>
    <div class="header-tools">
        @if (IsGranted(PermissionNames.Pages_Order_Process_Manage))
        {
            <button class="btn btn-primary pull-right" id="CreateNewProcess">
                <i class="fa fa-plus" aria-hidden="true">
                    @L("CreateNewProcess")
                </i>
            </button>
        }
    </div>
</section>

<section class="content">
    <div class="box box-solid">
        <div class="box-body">
            <table id="ProcessTable" class="table table-bordered table-hover" style="width: 100%"></table>
        </div>
    </div>
</section>

