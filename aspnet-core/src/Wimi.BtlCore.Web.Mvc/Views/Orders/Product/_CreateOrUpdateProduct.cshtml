@using Wimi.BtlCore
@using Wimi.BtlCore.Web.Models.Common.Modals
@model Wimi.BtlCore.Web.Models.Order.Product.ProductModel
@await Html.PartialAsync("~/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? L("Editor") : L("Create")))

<div class="modal-body">

    <form name="createOrUpdateForm" role="form" novalidate class="form-validation">
        <div class="form-group form-md-line-input form-md-floating-label">
            <label>@L("ProductCode")</label>
            <input class="form-control code" type="text" name="Code" checkSpace="true" required maxlength="@BtlCoreConsts.MaxLength"
                   value="@(Model.IsEditMode ? Model.Code : string.Empty)">
        </div>
        <div class="form-group form-md-line-input form-md-floating-label">
            <label>@L("ProductName")</label>
            <input class="form-control name" type="text" name="Name" checkSpace="true" required maxlength="@BtlCoreConsts.MaxLength"
                   value="@(Model.IsEditMode ? Model.Name : string.Empty)">
        </div>
        <div class="form-group form-md-line-input form-md-floating-label">
            <label>@L("ProductSpecification")</label>
            <input class="form-control spec" type="text" name="Spec" maxlength="@BtlCoreConsts.MaxLength"
                   value="@(Model.IsEditMode ? Model.Spec : string.Empty)">
        </div>
        <div class="form-group form-md-line-input form-md-floating-label">
            <label>@L("DrawingNumber")</label>
            <input class="form-control drawingNumber" type="text" name="DrawingNumber" maxlength="@BtlCoreConsts.MaxLength"
                   value="@(Model.IsEditMode ? Model.DrawingNumber : string.Empty)">
        </div>
        <div class="form-group form-md-line-input form-md-floating-label">
            <label>@L("PartType")</label>
            <input class="form-control partType" type="text" name="PartType" maxlength="@BtlCoreConsts.MaxLength"
                   value="@(Model.IsEditMode ? Model.PartType : string.Empty)">
        </div>
        @*<div class="form-group form-md-line-input form-md-floating-label">
                <label>@L("ProductDescription")</label>
                <input class="form-control desc" type="text" name="Desc" maxlength="@CoreConsts.MaxLength"
                       value="@(Model.IsEditMode ? Model.Desc : string.Empty)">
            </div>
            <div class="form-group form-md-line-input form-md-floating-label">
                <label>@L("Semi-finishedProducts")</label>
                <select class="form-control ishalffinished" type="text" name="IsHalfFinished" required>
                    <option value="Y" selected>@L("Yes")</option>
                    <option value="N">@L("No")</option>
                </select>
            </div>*@
        <div class="form-group form-md-line-input form-md-floating-label">
            <label>@L("Note")</label>
            <input class="form-control memo" type="text" name="Memo" maxlength="@BtlCoreConsts.MaxLength"
                   value="@(Model.IsEditMode ? Model.Memo : string.Empty)">
        </div>

        <input type="hidden" id="Id" value="@(Model.IsEditMode ? Model.Id : 0)" />
        <input type="hidden" id="ProductGroupId" value="@Model.ProductGroupId" />
        <input type="hidden" id="IsHalfFinished" value="@(Model.IsHalfFinished)" />
    </form>
</div>

@await Html.PartialAsync("~/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
