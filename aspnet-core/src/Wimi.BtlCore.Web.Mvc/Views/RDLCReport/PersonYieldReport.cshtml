@using Wimi.BtlCore.Authorization
@using Wimi.BtlCore.Web.Startup
@{
    ViewBag.CurrentPageName = PageNames.App.Page.RDLCReport_PersonYield;
}

@section Scripts
{
    <script src="~/view-resources/Views/RDLCReport/_PersonYieldReport.js" asp-append-version="true"></script>
}

<section class="content-header">
    <h1>
        @L("RDLCReport")<small>@L("PersonYield")</small>
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-solid">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <i class="fa fa-search"></i> @L("QueryArea")
                    </h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body">
                    <form class="form-horizontal no-padding">
                        <div class="col-xs-12 col-sm-3">
                            <label class="col-sm-4 control-label">
                                <b class="text-primary">@L("StartTime")</b>
                            </label>
                            <div class="col-sm-8">
                                <input type="datetime" class="form-control startTime" name="startTime">
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-3">
                            <label class="col-sm-4 control-label">
                                <b class="text-primary">@L("EndTime")</b>
                            </label>
                            <div class="col-sm-8">
                                <input type="datetime" class="form-control endTime" name="endTime">
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-3">
                            <label class="col-sm-4 control-label">
                                <b class="text-primary">@L("ShiftSetting")</b>
                            </label>
                            <div class="col-sm-8">
                                <select class="form-control ShiftSolution" id="ShiftSolution" name="ShiftSolution">
                                    <option value="0">@L("All")</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-3">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="button"
                                        class="btn btn-primary btn-sm  xs-mh-5"
                                        id="search">
                                    <i class="fa fa-search"></i> @L("Research")
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="box box-solid" id="reportarea">
        @await Component.InvokeAsync("Reports", new { input = Model })
    </div>
</section>