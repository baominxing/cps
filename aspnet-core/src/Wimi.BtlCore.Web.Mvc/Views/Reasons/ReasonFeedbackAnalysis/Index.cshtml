@using Wimi.BtlCore.Web.Startup
@{
    ViewBag.CurrentPageName = PageNames.App.Page.ReasonFeedback_Analysis;
}

@section Scripts
{
    <script src="~/view-resources/Views/Reasons/ReasonFeedbackAnalysis/Index.js" asp-append-version="true"></script>
    <script src="~/Scripts/echarts.min.js" asp-append-version="true"></script>
    <script src="~/Scripts/scrollTabs/jquery.mousewheel.js" asp-append-version="true"></script>
    <script src="~/Scripts/scrollTabs/jquery.scrolltabs.js" asp-append-version="true"></script>
}

<style>
    .table {
        margin-bottom: 0px !important;
    }
</style>

<section class="content-header">
    <h1>
        @L("ReasonFeedbackAnalysis")<small></small>
    </h1>
</section>

<section class="content" id="reasonFeedbackAnalysis">
    <div class="box box-solid">
        <div class="box-header with-border">
            <h3 class="box-title">
                <i class="fa fa-search"></i> @L("QueryArea")
            </h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <form class="form-horizontal no-padding">

                <div class="col-xs-12 col-sm-3 ">
                    <label class="col-sm-4 control-label">
                        <b class="text-primary">@L("TimeFrame")</b>
                    </label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="daterange-btn" data-type="calendar" />
                    </div>
                </div>

                <div class="col-xs-12 col-sm-3 ">
                    <label for="itemBarCode" class="col-sm-4 control-label">
                        <b class="text-primary">@L("DeviceGroup")</b>
                    </label>
                    <div class="col-sm-8">
                        <select class="form-control" id="deviceGroup"></select>
                    </div>
                </div>

                <div class="col-xs-12 col-sm-3 pull-right">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="button" id="btnQuery" class="btn btn-primary btn-sm pull-right xs-mv-5"><i class="fa fa-search"></i> @L("Research")</button>
                    </div>
                </div>

            </form>
        </div>
    </div>

    <div class="row">

        <div class="col-xs-12">
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs pull-right">
                    <li class="active">
                        <a href="#tab_1-1" data-toggle="tab">@L("Cutter-Number")</a>
                    </li>
                    <li>
                        <a href="#tab_2-2" data-toggle="tab">@L("TimeLengthSort")</a>
                    </li>
                    <li class="pull-left header"><i class="fa fa-th"></i> @L("QueryResults")</li>
                </ul>

                <div class="tab-content">
                    <div class="tab-pane active" id="tab_1-1">
                        <div class="row">

                            <div class="col-md-4">
                                <table id="analysisTableBYTime" class="table table-bordered table-hover table-striped" style="width:100%"></table>
                            </div>
                            <div class="col-md-8">
                                <div id="analysisChartByTime" style="height: 800px"></div>
                            </div>

                        </div>
                    </div>
                    <div class="tab-pane" id="tab_2-2">
                        <div class="row">
                            <div class="col-md-4">
                                <table id="analysisTableBYDuration" class="table table-bordered table-hover table-striped" style="width:100%"></table>
                            </div>
                            <div class="col-md-8">
                                <div id="analysisChartByDuration" style="height: 800px"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>


</section>