@using Wimi.BtlCore.Web.Startup
@model Wimi.BtlCore.Web.Models.Trace.TraceabilitySelectGroupViewModal
@{
    ViewBag.CurrentPageName = PageNames.App.Page.Traceability_NgParts;
}

@section Scripts
{
    <script src="~/view-resources/Views/Traceability/NgParts/NgParts.js" asp-append-version="true"></script>
}

<style>
    .dataTable, th {
        text-align: center;
    }
</style>

<section class="content-header">
    <h1>
        @L("TraceNgParts")<small></small>
    </h1>
</section>

<section class="content">
    <div class="box box-solid">
        <div class="box-header with-border">
            <h3 class="box-title">
                <i class="fa fa-search"></i> @L("QueryArea")
            </h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                    <i class="fa fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <form class="form-horizontal no-padding">
                <div class="col-xs-12 col-sm-3 ">
                    <label class="col-sm-4 control-label">
                        <b class="text-primary">@L("DeviceGroup")</b>
                    </label>
                    <div class="col-sm-8">
                        <select class="form-control" id="DeviceGroup"><option value="0">@L("All")</option></select>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-3 ">
                    <label class="col-sm-4 control-label">
                        <b class="text-primary">@L("WorkpieceCoding")</b>
                    </label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="PartNo" name="PartNo" />
                    </div>
                </div>

                <div class="col-xs-12 col-sm-3">
                    <label class="col-sm-4 control-label">
                        <b class="text-primary">@L("MachineName")</b>
                    </label>
                    <div class="col-sm-8">
                        <select class="form-control" id="Machine"></select>
                    </div>
                </div>

                <div class="col-xs-12 col-sm-3">
                    <label class="col-sm-4 control-label">
                        <b class="text-primary">@L("Shift")</b>
                    </label>
                    <div class="col-sm-8">
                        <select class="form-control" id="Shift">
                            <option value="0">@L("All")</option>
                            @foreach (var item in Model.Items)
                            {
                                <optgroup label="@item.Name">
                                    @foreach (var option in item.ChildNode)
                                    {
                                        <option value="@option.Id">@option.Name</option>
                                    }
                                </optgroup>
                            }
                        </select>
                    </div>
                </div>
                <br />
                <br />
                <br />
                <div class="col-xs-12 col-sm-3 ">
                    <label class="col-sm-4 control-label">
                        <b class="text-primary">@L("StartTime")</b>
                    </label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="daterange-start" data-type="calendar" />
                    </div>
                </div>

                <div class="col-xs-12 col-sm-3 ">
                    <label class="col-sm-4 control-label">
                        <b class="text-primary">@L("EndTime")</b>
                    </label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="daterange-end" data-type="calendar" />
                    </div>
                </div>

                <div class="col-xs-12 col-sm-3 ">
                    <label class="col-sm-4 control-label">
                        <b class="text-primary">@L("WorkstationCode")</b>
                    </label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="StationCode" name="StationCode" />
                    </div>
                </div>

                <div class="col-xs-12 col-sm-2 pull-right">
                    <div class="col-sm-6">
                        <button type="button" id="btnQuery" class="btn btn-primary btn-sm pull-right xs-mv-5 form-control"><i class="fa fa-search"></i> @L("Research")</button>
                    </div>
                    <div class="col-sm-6">
                        <div class="btn btn-default pull-right btn-sm xs-mv-5 form-control" id="btnExport"><i class="fa "></i>@L("Export")</div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="box box-solid">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <i class="fa fa-th"></i> @L("QueryResults")
                    </h3>
                </div>

                <div class="box-body">
                    <table class="table table-striped table-bordered table-hover nowrap" id="NgPartsTable" style="width: 100%"></table>
                </div>
            </div>
        </div>
    </div>

</section>


